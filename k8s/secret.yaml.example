# Secret - Store sensitive data (API keys, passwords, etc.)
# IMPORTANT: Never commit actual secrets to git!
# Copy this file to secret.yaml and add your values

apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: k8s-demo
  labels:
    app: k8s-demo
type: Opaque

# Option 1: Plain text (will be base64 encoded automatically)
stringData:
  DATABASE_URL: "postgres://user:password@host:5432/db"
  API_KEY: "your-api-key-here"
  JWT_SECRET: "your-jwt-secret"

# Option 2: Base64 encoded values
# data:
#   DATABASE_URL: cG9zdGdyZXM6Ly91c2VyOnBhc3N3b3JkQGhvc3Q6NTQzMi9kYg==
#   API_KEY: eW91ci1hcGkta2V5LWhlcmU=

---
# How to create secrets via kubectl:
#
# From literal values:
# kubectl create secret generic app-secrets \
#   --from-literal=DATABASE_URL='postgres://...' \
#   --from-literal=API_KEY='your-key' \
#   -n k8s-demo
#
# From file:
# kubectl create secret generic app-secrets \
#   --from-file=./secrets.env \
#   -n k8s-demo
#
# From .env file:
# kubectl create secret generic app-secrets \
#   --from-env-file=.env \
#   -n k8s-demo
